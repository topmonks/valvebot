{
  "compilerOptions": {
    "baseUrl": "../../",
    "incremental": true,
    "target": "es2020",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": false,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "allowJs": true
  },
  "ts-node": {
    "require": [
      "dotenv/config",
      "tsconfig-paths/register"
    ]
  }
}